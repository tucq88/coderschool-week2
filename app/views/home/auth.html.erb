<!-- Buttons -->
<p class="text-right">
  <%= link_to 'New Message', new_message_path, class: "btn btn-primary" %>
  &nbsp;
  <%= link_to 'Add Friends', users_path, class: "btn btn-info" %>
  &nbsp;
  <%= link_to 'Sent Messages', messages_sent_path, class: "btn btn-warning" %>
</p>

<!-- Recently messages -->
<div class="panel panel-primary">
  <div class="panel-heading">Recently messages</div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Send at</th>
          <th>Read at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr class="<%= message.is_read ? "" : "warning" %>">
            <td><%= message.sender.email %></td>
            <td><%= message.created_at.to_formatted_s(:long_ordinal) %></td>
            <td><%= message.read_info %></td>
            <td>
              <% if !message.is_read %>
                <%= link_to 'Show', message, class: "btn btn-info btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Recently users -->
<div class="panel panel-primary">
  <div class="panel-heading">Recently registered users</div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Registered at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @new_users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.created_at.to_formatted_s(:long_ordinal) %></td>
            <td>
              <%= link_to "Add Friend", friendships_path(:friend_id => user),
                method: "post",
                class: "btn btn-info btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

