<div class="panel panel-primary">
  <div class="panel-heading">Login to Gauchat</div>
  <div class="panel-body">

    <%= form_tag login_path do %>
      <div class="form-group">
        <label for="user_email">Email address</label>
        <%= text_field_tag :email, nil,
            class: "form-control", id: "user_email", placeholder: "Email", type: "email"  %>
      </div>
      <div class="form-group">
        <label for="user_password">Password</label>
        <%= text_field_tag :password, nil,
            class: "form-control", id: "user_pssword", placeholder: "Password", type: "password"  %>
      </div>

      <div class="form-group form-actions text-center">
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
    <% end %>

  </div>
</div>
